{
  "version": "0.1.11",
  "license": "MIT",
  "name": "@nestjs-toolkit/chunk-stream",
  "description": "A simple chunk stream for NestJS",
  "author": "Valmir Barbosa",
  "main": "index.js",
  "typings": "index.d.ts",
  "module": "chunk-stream.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch --targe node --format cjs",
    "build": "tsdx build --targe node --format cjs",
    "copy": "cp package.json README.md LICENSE dist",
    "test": "tsdx test",
    "lint": "tsdx lint --fix",
    "prepare": "tsdx build --targe node --format cjs && yarn copy",
    "publish:prod": "cd dist && npm publish --access public",
    "publish:local": "yarn publish --registry http://localhost:4873 dist"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4"
  }
}
